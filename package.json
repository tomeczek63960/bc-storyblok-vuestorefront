{
  "name": "ecommerce-bigcommerce-integration",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=10.x"
  },
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test -- --passWithNoTests",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "docs:build": "lerna run build --ignore @vue-storefront/bigcommerce-theme && cd docs && yarn build",
    "docs:dev": "cd docs && yarn dev",
    "docs:install": "cd docs && yarn",
    "lint": "eslint . --ext .ts,.vue",
    "prepare": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true",
    "start": "cd packages/theme && yarn start",
    "update:check": "ncu && lerna run update:check --stream",
    "update:update": "ncu -u && lerna run update:update --stream",
    "publish:patch": "lerna publish patch --yes --skip-npm --force-publish=*",
    "publish:minor": "lerna publish minor --yes --skip-npm --force-publish=*"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/config-lerna-scopes": "^16.0.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vue/eslint-config-typescript": "^10.0.0",
    "all-contributors-cli": "^6.20.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "eslint": "8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^8.4.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "jsdom": "^19.0.0",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^12.3.3",
    "npm-check-updates": "^12.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "shx": "^0.3.4",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "~4.2",
    "vue-eslint-parser": "^8.2.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
